<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lockScreen">
    <com.hanks.passcodeview.PasscodeView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/passcodeview"
        android:background="@color/colorPrimary"
        app:wrongStateColor="@color/Red"
        app:numberTextColor="@color/grey"
        app:passcodeLength="4"
        app:passcodeViewType="set_passcode"/>
    <TextView
        android:id="@+id/userphonenumber"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Password is : 8283"
        android:textSize="20sp"></TextView>

</RelativeLayout>